<div class="container">
  <h1>Reunião</h1>
  <div id="posts">
    <% datereunion = [] %> 
    <% @posts.each do |reuniondate| %>
      <% if !datereunion.include?(reuniondate.date) %>
        <% datereunion.push(reuniondate.date)%>
        <div class="accordion" id="accordionExample">
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" style="box-shadow: none!important;" type="button" data-bs-toggle="collapse" data-bs-target="#<%=reuniondate.date%>" aria-expanded="false" aria-controls=<%=reuniondate.date%>>
              Reunião do dia: <%= reuniondate.date %>
              </button>
            </h2>
            <div id=<%= reuniondate.date%> class="accordion-collapse collapse" data-bs-parent="#accordionExample">
              <div class="accordion-body">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th>Dev:</th>
                      <th>Description:</th>
                      <th>Status:</th>
                      <th>Good/Bad:</th>
                      <th>Date:</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <% @posts.each do |post| %>
                    <% if post.date == reuniondate.date %>
                      <tr>
                        <tbody>
                          <td><%= post.dev %></td>
                          <td><%= post.description %></td>
                          <td><%= post.status %></td>
                          <td><%= post.good_bad %></td>
                          <td><%= post.date %></td>
                          <td><%= link_to 'Show', post, class:"btn btn-primary"%></td>
                          <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-warning", style:"color: #FFF; background-color: orange" %></td>
                          <td><%= button_to "Delete", post, method: :delete, class:"btn btn-danger button-delete", onclick: "return confirm('Tem certeza que deseja excluir este post?')" %></td>
                        </tbody>
                      </tr>  
                    <% end %>
                  <% end %>
                </table>
              </div>
            </div>
          </div>
        </div>
      <% end %> 
     <% end %>

  </div>
  <%= link_to "New post", new_post_path, class:"btn btn-primary btn-small", style:"margin-top: 0.7rem;" %>
</div>


