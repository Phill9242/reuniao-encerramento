<div class="container">
<p style="color: green"><%= notice %></p>

<h1>Posts</h1>


  <div id="posts">
  <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Dev:</th>
          <th>Description:</th>
          <th>Status:</th>
          <th>Good/Bad:</th>
          <th>Date:</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    <% @posts.each do |post| %>
      <tr>
        <tbody>
          <td><%= post.dev %></td>
          <td><%= post.description %></td>
          <td><%= post.status %></td>
          <td><%= post.good_bad %></td>
          <td><%= post.date %></td>
          <td><%= link_to 'Show', post, class:"btn btn-primary"%></td>
          <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-warning", style:"color: #FFF; background-color: orange" %></td>
          <td><%= button_to "Delete", post_path(post), method: :delete, confirm: 'Are you sure?', class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </div>
      </tbody>
    </table>
</div>

<%= link_to "New post", new_post_path, class:"btn btn-primary btn-small"%>
