<%= form_with(model: post, html: {name: "post[sub_posts_attributes][#{local_assigns[:index]}]" }) do |form| %>
  <tr>
    <tbody class="post-form">
      <td>
        <%= form.select :dev_id, @devs.map { |dev| [dev.name, dev.id] }, {}, { :class => 'btn border dropdown-toggle w-100 text-start' } %>
      </td>
      <td>
        <%= form.text_area :description, class: "form-control custom-textarea",required: true %>
      </td>
      <td>
        <%= form.select :good_bad, ['', 'Boa', 'Ruim'], {}, { :class => 'btn border dropdown-toggle w-100  text-start' }%>
      </td>
      <td>
        <%= form.select :status, ['', 'Continuar', 'Parar', 'Melhorar'], {}, { :class => 'btn border dropdown-toggle w-100  text-start' }%>
      </td>
      <td>
        <%= form.date_field :date , class:"form-control w-100 data", :value => Time.now.strftime('%Y-%m-%d')%>
      </td>
    </tbody>
  </tr>
<% end %>

  