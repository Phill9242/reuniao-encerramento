<div class="container">
  <h1 class="mt-3" style="color:#e6e6eb !important;">Devs</h1>
  <table class="table tabela-dev table-striped table-hover">
    <% @devs.each do |dev| %>
      <tr style="border-bottom: 1px solid #e6e6eb;">
        <tbody>
          <td><%= dev.name %></td>
          <td>
            <div class="d-flex justify-content-end">
              <%= form_with url: edit_dev_path(dev), method: :get do %>
                  <%= button_tag(type: 'submit', class: "btn btn-outline-dark me-2 border-0") do %>
                    <%= image_tag "editar.svg" %>
                  <% end %> 
                <% end %>
              <%= button_to image_tag("excluir.png"), dev, method: :delete, class:"btn btn-outline-danger button-delete border-0", onclick: "return confirm('Tem certeza que deseja excluir este post?')" %>
            </div>
          </td>
        </tbody>
      </tr>  
    <% end %>
  </table>
  <%= link_to "Novo Dev", new_dev_path, class:"btn btn-outline-primary btn-small", style:"margin-top: 0.7rem;" %>
</div>

